<Application x:Class="Lapushok.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Lapushok"
             StartupUri="MainWindow.xaml"
             >
    <Application.Resources>
        <Brush x:Key="MainBackground">#ffFFFFFF</Brush>
        <Brush x:Key="AdditionalBackground">#ffCEFFF9</Brush>
        <Brush x:Key="Acient">#ff00CC76</Brush>

        <Style TargetType="Page">
            <Setter Property="FontFamily" Value="Gabriola"/>
        </Style>
    </Application.Resources>
</Application>
